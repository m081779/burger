


<div class="container ">
	<img src="/assets/img/burger.png" alt="" class="">
	<h1 class="text-center text-shadow" id="title">Eat-Da-Burger!</h1>
	<div class="row">
		<form class="col-sm-offset-3 col-sm-6">
			<div class="form-group">
				<h3 id="label" class="text-shadow text-center">Enter a burger, or say "Add" and then then the name of your burger:</h3>
				<textarea name="burger" class="form-control" rows="2" id="burger" autofocus></textarea>
			</div>
			<input type="submit" value="Submit" id="submit" class="btn btn-danger btn-block" class="form-control">
		</form>
	</div>
	<div class="row">
		<div class="col-sm-6">
			<h3 class="sectionTitle text-shadow text-center">Burger Queue:</h3>
			{{#each burgers}}
				{{#unless devoured}}
					<div class="burger text-shadow">
					<p>{{this.id}}. {{burger_name}}<button class="devour pull-right btn btn-danger" id="{{this.id}}">Devour it!</button></p>

					</div>
				{{/unless}}
			{{/each}}
		</div>

		<div class="col-sm-6">
			<h3 class="sectionTitle text-shadow text-center">Devoured Burgers:</h3>
			{{#each burgers}}
				{{#if devoured}}
					<input class="form-control" type="text" value="{{burger_name}}">
					<br>
				{{/if}}
			{{/each}}
		</div>
	</div>
	
</div>

